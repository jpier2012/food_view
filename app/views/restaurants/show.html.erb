<h1>Restaurant Detail</h1>
<table>
    <tr>
        <td>Name: </td>
        <td><%= @restaurant.name %></td>
    </tr>
    <tr>
        <td>Address: </td>
        <td><%= @restaurant.address %></td>
    </tr>
    <tr>
        <td>Cuisine: </td>
        <td><%= @restaurant.cuisine %></td>
    </tr>
    <tr>
        <td>Dress Code:</td>
        <td><%= @restaurant.dress_code %></td>
    </tr>
    <tr>
        <td>Outdoor Seating: </td>
        <td><%= @restaurant.outdoor_seating %></td>
    </tr>
     <tr>
        <td>Child Friendly: </td>
        <td><%= @restaurant.child_friendly %></td>
    </tr>
     <tr>
        <td>BYOB: </td>
        <td><%= @restaurant.byob %></td>
    </tr>
     <tr>
        <td>Open Bar: </td>
        <td><%= @restaurant.open_bar %></td>
    </tr>
</table>

<br>
<h3>Restaurant Dishes</h3>
<ul>
    <% @restaurant.dishes.each do |dish| %>
        <li><%= link_to "#{dish.name}", restaurant_dish_path(@restaurant, dish) %></li>
        <ul>
            <li>Created By <%= dish.user_email %></li>
        </ul>
        <br>
    <% end %>
</ul>
<br>
<% if user_created_restaurant %>
    <%= link_to "Edit Restaurant Details", edit_restaurant_path(@restaurant), html_options = { id: "button"} %>
<% end %>
<br>
<br>
<%= link_to "Add Dish to Restaurant", new_restaurant_dish_path(@restaurant), html_options = { id: "button"}  %><br>

