<%= form_for @restaurant do |f| %>
    <%= render partial: "application/errors", locals: { object: @restaurant } %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :address %>
    <%= f.text_field :address %><br><br>

    Choose a cuisine:<br>
    <% @cuisines.each do |c| %>
        <%= label :cuisine, c %>
        <%= radio_button(:restaurant, :cuisine, c) %><br>
    <% end %>
    <br>
    <%= f.label :dress_code %>
    <%= f.text_field :dress_code %><br>

    <%= f.label :outdoor_seating %>
    <%= f.check_box :outdoor_seating %><br>

    <%= f.label :child_friendly %>
    <%= f.check_box :child_friendly %><br>

    <%= f.label :open_bar %>
    <%= f.check_box :open_bar %><br>
    
    <%= f.label :byob, "BYOB?" %>
    <%= f.check_box :byob %>
    <br>
    <br>
    <%= f.submit %><br>
<% end %>
