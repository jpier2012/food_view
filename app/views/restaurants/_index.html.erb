<h3>Click restaurant name to view</h3>
<h4>Count: <%= @restaurants.count %></h4>


<% if session[:filters] %>
    <% session[:filters].each do |filter, value| %>
        <h3><%= "#{filter.humanize}: #{value}" %></h3>
    <% end %>
<% end %>

    <% @restaurants.each do |r| %>
        <p><%= link_to "#{r.name}", restaurant_path(r) %></p>
        <ul>
            <li>Cuisine: <%= r.cuisine %></li>
            <li>BYOB: <%= r.byob %></li>
            <li>Child Friendly: <%= r.child_friendly %></li>
            <li>Open Bar: <%= r.open_bar %></li>
            <li>Outdoor Seating: <%= r.outdoor_seating %></li>
            <br>
        </ul>
    <% end %>