<%= form_for @dish do |d| %>
  <%= d.label :name %>
  <%= d.text_field :name, required: true %><br>

  <%= d.label :description %>
  <%= d.text_field :description %><br>

  <%= d.label :price, "Price: $" %>
  <%= d.number_field :price, required: true %><br><br>

  Rate your meal! (1-5 scale, 5 being best): <br>

  <%= d.label :taste %>
  <%= d.number_field :taste, in: 1..5, step: 1 %><br>

  <%= d.label :dining_experience %>
  <%= d.number_field :dining_experience, in: 1..5, step: 1 %><br>
  
  <%= d.label :overall_value %>
  <%= d.number_field :overall_value, in: 1..5, step: 1 %><br><br>

  <%= d.collection_select(:restaurant_id, Restaurant.all, :id, :name, {prompt: "Please Select a Restaurant"}) %><br><br>

  <p>Or, create a new restaurant: </p>

  <%= d.fields_for :restaurant, @dish.build_restaurant do |r| %>
    <%= r.label :name %>
    <%= r.text_field :name %><br>

    <%= r.label :address %>
    <%= r.text_field :address %><br>

    <%= r.label :cuisine %>
    <%= r.text_field :cuisine %><br>

    <%= r.label :dress_code %>
    <%= r.text_field :dress_code %><br>

    <%= r.label :outdoor_seating %>
    <%= r.check_box :outdoor_seating %><br>

    <%= r.label :child_friendly %>
    <%= r.check_box :child_friendly %><br>

    <%= r.label :open_bar %>
    <%= r.check_box :open_bar %><br>
    
    <%= r.label :byob, "BYOB?" %>
    <%= r.check_box :byob %><br>
  <% end %>

  <br><%= d.submit %><br>
<% end %>